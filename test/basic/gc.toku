if __TESTS.gc or __TESTS.memory {
    (Message or print)("skipped basic library \"gc\" tests");
    return;
} else {
    gc("check"); /// clear flag (if set)
    assert(!gc("check"));
    local old = gc("count") * 1024; 
    assert(typeof(old) == "number");
    gc("collect");
    local bytes = gc("count") * 1024;
    assert(typeof(bytes) == "number");
    assert(gc("isrunning"));
    gc("stop");
    assert(!gc("isrunning"));
    gc("restart");
    assert(gc("isrunning"));
    gc("step");
    gc("step", 0);
    gc("step", 20);
    assert(gc("isrunning"));
    local s = "ok";
    s = s .. s;
    s = nil;
    gc("check"); /// clear flag (if set)
    assert(!gc("check"));
    gc();
    assert(gc("check")); /// 's' string is collected
}
